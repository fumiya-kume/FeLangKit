{
    "name": "FeLangKit Swift Development",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "sswg.swift-lang",
                "vadimcn.vscode-lldb",
                "ms-vscode.test-adapter-converter",
                "streetsidesoftware.code-spell-checker",
                "davidanson.vscode-markdownlint",
                "redhat.vscode-yaml",
                "ms-vscode.vscode-json"
            ],
            "settings": {
                "swift.path": "/usr/bin/swift",
                "swift.buildPath": "/usr/bin/swift",
                "swift.runtimePath": "/usr/lib/swift",
                "lldb.library": "/usr/lib/liblldb.so",
                "terminal.integrated.defaultProfile.linux": "bash",
                "files.watcherExclude": {
                    "**/.build/**": true,
                    "**/.swiftpm/**": true
                }
            }
        }
    },
    "forwardPorts": [],
    "postCreateCommand": "swift package resolve",
    "postStartCommand": "echo 'SwiftLint can be installed later with: git clone https://github.com/realm/SwiftLint.git && cd SwiftLint && git checkout 0.57.0 && swift build -c release && sudo cp .build/release/swiftlint /usr/local/bin/'",
    "remoteUser": "vscode",
    "features": {
        "ghcr.io/devcontainers/features/common-utils:2": {
            "username": "vscode",
            "userUid": "1000",
            "userGid": "1000"
        }
    },
    "mounts": [
        "source=${localWorkspaceFolder}/.build,target=${containerWorkspaceFolder}/.build,type=bind,consistency=cached",
        "source=${localWorkspaceFolder}/.swiftpm,target=${containerWorkspaceFolder}/.swiftpm,type=bind,consistency=cached"
    ]
}