{
    "name": "FeLangKit Swift Development",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "sswg.swift-lang",
                "vadimcn.vscode-lldb",
                "ms-vscode.test-adapter-converter",
                "streetsidesoftware.code-spell-checker",
                "davidanson.vscode-markdownlint",
                "redhat.vscode-yaml",
                "ms-vscode.vscode-json"
            ],
            "settings": {
                "swift.path": "/usr/bin/swift",
                "swift.buildPath": "/usr/bin/swift",
                "swift.runtimePath": "/usr/lib/swift",
                "lldb.library": "/usr/lib/liblldb.so",
                "terminal.integrated.defaultProfile.linux": "bash",
                "files.watcherExclude": {
                    "**/.build/**": true,
                    "**/.swiftpm/**": true
                }
            }
        }
    },
    "forwardPorts": [],
    "postCreateCommand": "swift package resolve",
    "remoteUser": "vscode",
    "features": {
        "ghcr.io/devcontainers/features/common-utils:2": {
            "installZsh": true,
            "configureZshAsDefaultShell": true,
            "installOhMyZsh": true,
            "upgradePackages": true,
            "username": "vscode",
            "userUid": "1000",
            "userGid": "1000"
        },
        "ghcr.io/devcontainers/features/git:1": {
            "ppa": true,
            "version": "latest"
        }
    },
    "mounts": [
        "source=${localWorkspaceFolder}/.build,target=${containerWorkspaceFolder}/.build,type=bind,consistency=cached",
        "source=${localWorkspaceFolder}/.swiftpm,target=${containerWorkspaceFolder}/.swiftpm,type=bind,consistency=cached"
    ]
}